{{>sidebar}}
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
               {{>navbar}}
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4 ">
                        <h1 class="h3 mb-0">Control de clientes</h1> 
                        <button type="button"  data-toggle="modal" data-target="#addCustomerModal" class="btn btn-primary btn-sm d-none d-md-block d-lg-block d-xl-block "><i class="fas fa-user-plus"></i> Nuevo</button>
                        <div class="fixed-button d-lg-none d-md-none d-xl-none">
                            <button type="button"  data-toggle="modal" data-target="#addCustomerModal" class="btn btn-primary btn-lg"><i class="fas fa-user-plus"></i> Nuevo</button>
                        </div>
                                             
                    </div>
                        <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <div class="d-flex justify-content-between">
                                   <h6 class="m-0 font-weight-bold text-primary">Clientes</h6>
                                     <div class="input-group w-50">
                                        <input id="tableSearch" type="text" class="form-control mt-0 border-0 w-50" placeholder="Buscar..." >
                                        <div class="input-group-append">
                                            <button class="btn btn-primary" type="button">
                                                <i class="fas fa-search fa-sm"></i>
                                            </button>
                                        </div>
                                    </div>  
                            </div>           
                        </div>
                        <div class="card-body">
                            {{#if (isData customers)}}
                              <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Nombre completo</th>
                                            <th>Correo</th>
                                            <th>Teléfono</th>
                                            <th>Dirección</th>
                                            <th>Opciones</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Nombre completo</th>
                                            <th>Correo</th>
                                            <th>Teléfono</th>
                                            <th>Dirección</th>
                                            <th>Opciones</th>
                                        </tr>
                                    </tfoot>
                                    <tbody id="tbodyCustomers">
                                        {{#each customers}}
                                        <tr>
                                            <td>{{nombre}} {{apellido}}</td>
                                            <td>{{correo}}</td>
                                            <td>{{telefono}}</td>
                                            <td>{{direccion}}</td>
                                            <td>
                                                <div class="d-flex  flex-column-reverse">
                                            <button type="button"  
                                            data-toggle="modal" 
                                            data-target="#deleteCustomerModal{{id}}" 
                                            class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Eliminar</button>

                                            <button type="button"  
                                            data-toggle="modal" 
                                            data-target="#editCustomerModal{{id}}" 
                                            class="btn btn-info btn-sm my-1"><i class="fas fa-pen"></i> Editar</button>
                                            </div>
                                            </td>
                                        </tr>
                                        {{>adminComponents/customersModals/deleteCustomerModal}}
                                        {{>adminComponents/customersModals/editCustomerModal}}
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                            {{else}}
                            <h3 class="text-center">Aún no hay clientes registrados.</h3>
                            {{/if}}        
                        </div>
                    </div>
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->
          {{>footer}}
        </div>
    
         <script>
            const searchInput = document.getElementById('tableSearch')
            const tableBody = document.getElementById('tbodyCustomers')
            liveSearch(searchInput,tableBody)
        </script>
{{>adminComponents/customersModals/addCustomerModal}}
<!-- End of Content Wrapper -->