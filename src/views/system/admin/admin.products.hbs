{{>sidebar}}
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
               {{>navbar}}
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4 ">
                        <h1 class="h3 mb-0 "">Control de Productos</hh1> 
                        <button type="button"  data-toggle="modal" data-target="#addProductModal" class="btn btn-primary btn-sm d-none d-md-block d-lg-block d-xl-block "><i class="fas fa-plus"></i> Nuevo</button>
                        <div class="fixed-button d-lg-none d-md-none d-xl-none">
                            <button type="button"  data-toggle="modal" data-target="#addProductModal" class="btn btn-primary btn-lg"><i class="fas fa-user-plus"></i> Nuevo</button>
                        </div>
                                             
                    </div>
                        <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <div class="d-flex justify-content-between">
                                   <h6 class="m-0 font-weight-bold text-primary">Productos</h6>
                                     <div class="input-group w-50">
                                        <input id="tableSearch" type="text" class="form-control mt-0 border-0 w-50" placeholder="Buscar..." >
                                        <div class="input-group-append">
                                            <button class="btn btn-primary" type="button">
                                                <i class="fas fa-search fa-sm"></i>
                                            </button>
                                        </div>
                                    </div>  
                            </div>           
                        </div>
                        <div class="card-body">
                            {{#if (isData products)}}
                              <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>Nombre</th>
                                            <th>Precio compra</th>
                                            <th>Precio venta</th>
                                            <th>Categoria</th>
                                            <th>Im√°gen</th>
                                            <th>Opciones</th>
                                        </tr>
                                    </thead>
                                    <tbody id="tbodyProducts">
                                        {{#each products}}
                                        <tr>
                                            <td>{{nombre}}</td>
                                            <td>{{precio_compra}}</td>
                                            <td>{{precio_venta}}</td>
                                            <td>{{fk_categoria}}</td>
                                            <td>{{imagen}}</td>
                                            <td>
                                                <div class="d-flex  flex-column-reverse">
                                            <button type="button"  
                                            data-toggle="modal" 
                                            data-target="#deleteProductModal{{id}}" 
                                            class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Eliminar</button>

                                            <button type="button"  
                                            data-toggle="modal" 
                                            data-target="#editProductModal{{id}}" 
                                            class="btn btn-info btn-sm my-1"><i class="fas fa-pen"></i> Editar</button>
                                            </div>
                                            </td>
                                        </tr>
                                        {{>adminComponents/productsModals/deleteProductModal}}
                                        {{>adminComponents/productsModals/editProductModal}}
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                            {{else}}
                            <h3 class="text-center">Aun no hay productos registrados.</h3>
                            {{/if}}        
                        </div>
                    </div>
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->
          {{>footer}}
        </div>
       
        {{#if (isMessage message)}}
        <script>
            Toastify({
            text: '{{renderMessage message}}',
            className: "info text-center mt-2 w-25",
            position: "right",
            gravity:"top",
            style: {
                background: "#4e73df",
            }
            }).showToast();
        </script>
        {{/if}}
         <script type="module">
            import { liveSearch } from '/js/realtimeSearch.js'
            const searchInput = document.getElementById('tableSearch')
            const tableBody = document.getElementById('tbodyProducts')
            liveSearch(searchInput,tableBody)
        </script>
{{>adminComponents/productsModals/addProductModal}}
<!-- End of Content Wrapper -->