{{>sidebar}}
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
               {{>navbar}}
                <!-- Begin Page Content -->
                <div id="adminDashboard" class="container-fluid">
                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4"> 
                        <h1 class="h3 mb-0">Bienvenido {{user.nombre}}</h1>
                    </div>
                    <div class="row">
                        <div class="col col-12 col-sm-12 col-md-3 col-lg-3">
                             <div class="card shadow my-2">
                                <div class="card-header text-center">
                                    <span class="font-weight-bold">Ventas totales: </span>{{totalSales}}
                                </div>
                                <div class="card-body">
                                    <p><span class="font-weight-bold">Ventas de hoy locales: </span>{{localSalesToday}}</p>
                                    <p><span class="font-weight-bold">Ventas de hoy en linea: </span>{{onlineSalesToday}}</p>
                                    <hr>
                                    <p><span class="font-weight-bold">Ventas locales totales: </span>{{localSalesTotal}}</p>
                                    <p><span class="font-weight-bold">Ventas en linea totales: </span>{{onlineSalesTotal}} </p>
                                </div>
                            </div>
                        </div>
                        <div class="col col-12 col-sm-12 col-md-3 col-lg-3">
                             <div class="card shadow my-2">
                                <div class="card-header text-center font-weight-bold">
                                    Empleados registrados
                                </div>
                                <div  class="card-body">
                                    <p><span class="font-weight-bold">Administradores: </span>{{Admins}}</p>
                                    <p><span class="font-weight-bold">Meseros: </span>{{Meseros}}</p>
                                    <p><span class="font-weight-bold">Cocineros: </span>{{Cocineros}}</p>
                                    <p><span class="font-weight-bold">Bartenders: </span>{{Bartenders}}</p>
                                    <p><span class="font-weight-bold">Repartidores: </span>{{Repartidores}}</p>                                    
                                </div>
                            </div>
                        </div>
                        <div class="col col-12 col-sm-12 col-md-3 col-lg-3">
                             <div class="card shadow my-2">
                                <div class="card-header text-center font-weight-bold">
                                    Clientes registrados
                                </div>
                                <div class="card-body text-center">
                                    {{Customers}}
                                </div>
                            </div>
                        </div>
                </div> 
                <div class="d-flex">
                    <button id="BtnNotifyWaiter" class="btn btn-primary mx-2">Notificar Meseros</button>
                    <button id="BtnNotifyClient" class="btn btn-primary mx-2">Notificar Clientes</button>
                </div>
            </div>
                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->
          {{>footer}}
        </div>
        <!-- End of Content Wrapper -->