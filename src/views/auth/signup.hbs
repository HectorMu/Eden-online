    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5" style="display: flex; align-items:center; justify-content:center;">
                        <img src="https://datosdeclasehector.blob.core.windows.net/imagenes/LogoEden.png" style="width: 70%;">
                    </div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h2 text-gray-900 mb-4 font-weight-bold font-italic">¡Bienvenido!</h1>
                                <p class="text-gray-900 font-italic">Crea una cuenta para comenzar a realizar pedidos</p>
                            </div>
                            <form class="user" action="/signup" method="POST">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" name="nombre" id="nombre" class="form-control form-control-user" placeholder="Nombre(s)" required>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" name="apellido" id="apellido" class="form-control form-control-user" placeholder="Apellido(s)" required>
                                    </div>
                                </div> 
                                <div class="form-group">
                                    <input type="email" name="correo" id="email" class="form-control form-control-user" placeholder="Correo electrónico" required>
                                </div>
                                <div class="form-group">
                                    <input type="text" name="telefono" id="telefono" class="form-control form-control-user" placeholder="Telefono" required>
                                </div>
                                <div class="form-group">
                                    <input type="text" name="direccion" id="direccion" class="form-control form-control-user" placeholder="Dirección" required>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="password" name="contra" class="form-control form-control-user" placeholder="Contraseña" id="psw" required>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="password" name="confirmar" class="form-control form-control-user" placeholder="Repite la contraseña" id="psw1" required>
                                    </div>
                                </div>
                                <small>
                                    <p id="match"></p>
                                </small>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-user btn-block" id="signup">Registrar cuenta</button>
                                </div>
                            </form>
                            <hr>
                            <div class="text-center">
                                ¿Ya tienes una cuenta?
                                <a class="small" href="/login">Inicia sesión</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
