    <!-- Main Content -->
    <div id="content">
        {{>navbar}}
        <!-- Begin Page Content  -->
        <div class="container-fluid">
            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h3 mb-0 text-gray-800">Eden Bar & Lounge Menu </h1>
