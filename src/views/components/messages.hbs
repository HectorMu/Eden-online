{{#if error_msg}}
 <script>
            Toastify({
            text: '{{error_msg}}',
            className: "info text-center mt-2 w-100",
            position: "center",
            gravity:"top",
            style: {
                background: "red",
            }
            }).showToast();
        </script>
{{/if}}


{{#if success_msg}}
 <script>
            Toastify({
            text: '{{success_msg}}',
            className: "info text-center mt-2 w-100",
            position: "center",
            gravity:"top",
            style: {
                background: "#4e73df",
            }
            }).showToast();
        </script>
{{/if}}