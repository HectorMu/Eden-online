{{>sidebar}}
<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
        {{>navbar}}
        <!-- Begin Page Content -->
        <div class="container-fluid">
            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4 ">
                <h1 class="h3 mb-0 ">Selecciona el producto</h1>
                <a href="/admin/shopping"
                    class="btn btn-danger btn-sm d-none d-md-block d-lg-block d-xl-block ">
                    <i class="fas fa-window-close"></i>
                    Cancelar</a>
                <div class="fixed-button d-lg-none d-md-none d-xl-none">
                    <a href="/admin/shopping" class="btn btn-danger"><i class="fas fa-window-close"></i>Cancelar</a>
                </div>
            </div>
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <div class="d-flex justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Productos</h6>
                        <div class="input-group w-50">
                            <input id="tableSearch" type="text" class="form-control mt-0 border-0 w-50"
                                placeholder="Buscar...">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="button">
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    {{#if (isData products)}}
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>$ Costo</th>
                                    <th>Im√°gen</th>
                                    <th>Opciones</th>
                                </tr>
                            </thead>
                            <tbody id="tbodyProducts">
                                {{#each products}}
                                <tr>
                                    <td>{{nombre}}</td>
                                    <td>{{precio_compra}}</td>
                                    <td>
                                        <div style="display: flex; align-items:center; justify-content:center;">
                                            <img src="{{imagen}}" class="img-thumbnail" width="80" height="80">
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column-reverse">
                                            <button type="button" data-toggle="modal"
                                                data-target="#addShoppingModal{{id}}" class="btn btn-primary btn-sm">
                                                <i class="fas fa-plus"></i>
                                                Agregar</button>
                                        </div>
                                    </td>
                                </tr>
                                {{>adminComponents/shoppingModals/addShoppingModal}}
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    {{else}}
                    <h3 class="text-center">Aun no hay productos registrados.</h3>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->
</div>
<!-- End of Main Content -->
{{>footer}}
</div>
<script>
    const searchInput = document.getElementById('tableSearch')
    const tableBody = document.getElementById('tbodyProducts')
    liveSearch(searchInput, tableBody)
</script>
<!-- End of Content Wrapper -->